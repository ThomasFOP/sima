@page
@{
    Layout="../../Shared/_Layout.cshtml";
    ViewData["Title"] = "Registro de Vehículos";
}

<div x-data="{ filter: false }" class="bg-white rounded-lg px-8 py-6 shadow-md overflow-x-scroll custom-scrollbar">
    <h4 class="text-xl font-poppins text-zinc-700 font-semibold uppercase">Registro de Vehículos</h4>
    <div class="mt-8 mb-3 flex flex-col md:flex-row items-start md:items-center md:justify-between">
        <div class="flex items-center justify-center space-x-4">
            <form class="w-full max-w-5xl">

                <label class="block uppercase tracking-wide text-orange-600 underline text-sm font-bold mb-8" for="vehicleInf">
                        Información del Vehículo
                </label>
                <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="vehiclePlate">
                            Placa
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="vehiclePlate" type="text" placeholder="ABC-123">
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="manufacturer">
                            Fabricante
                        </label>
                        <select  x-model="manufacturer" class="w-full h-12 border-zinc-300 focus:outline-none focus:ring-0  focus:border-orange-600 rounded text-sm text-zinc-700">
                            <option></option>
                            <option>BYD</option>
                            <option>CHANGAN</option>
                            <option>CHANGHE</option>
                            <option>CHEVROLET</option>
                            <option>CITROEN</option>
                            <option>DFSK</option>
                            <option>DODGE</option>
                            <option>DS</option>
                            <option>FIAT</option>
                            <option>FOTON</option>
                            <option>GREAT WALL</option>
                            <option>HONDA</option>
                            <option>HYUNDAI</option>
                            <option>JAC</option>
                            <option>KARRY</option>
                            <option>LAND ROVER</option>
                            <option>MAHINDRA</option>
                            <option>MAZDA</option>
                            <option>MG</option>
                            <option>MITSUBISHI</option>
                            <option>NISSAN</option>
                            <option>OPEL</option>
                            <option>PEUGEOT</option>
                            <option>RAM</option>
                            <option>RENAULT</option>
                            <option>SEAT</option>
                            <option>SHINERAY</option>
                            <option>SSANGYONG</option>
                            <option>SUBARU</option>
                            <option>SUZUKI</option>
                            <option>TOYOTA</option>
                            <option>VOLKSWAGEN</option>
                            <option>VOLVO</option>
                        </select>
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="line">
                            Línea
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="line" type="text" placeholder="QASHQAI">
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="model">
                            Modelo
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="model" type="number" placeholder="2018">
                    </div>
                </div>
                
                <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="cylinderCap">
                            Cilindraje (cc)
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="cylinderCap" type="float" placeholder="2.500">
                    </div>
                    
                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="color">
                            Color
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="color" type="text" placeholder="Rojo">
                    </div>
                    
                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="service">
                            Servicio
                        </label>
                        <select  x-model="manufacturer" class="w-full h-12 border-zinc-300 focus:outline-none focus:ring-0  focus:border-orange-600 rounded text-sm text-zinc-700">
                            <option></option>
                            <option>PARTICULAR</option>
                            <option>PÚBLICO</option>
                            
                        </select>
                    </div>
                    
                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="bodyType">
                            Tipo de Carrocería
                        </label>
                        <select  x-model="bodyType" class="w-full h-12 border-zinc-300 focus:outline-none focus:ring-0 focus:border-orange-600 rounded text-sm text-zinc-700">
                            <option></option>
                            <option>COUPÉ</option>
                            <option>CROSSOVER</option>
                            <option>FAMILIAR</option>
                            <option>HATCHBACK</option>
                            <option>MINIVAN</option>
                            <option>PICK-UP</option>
                            <option>ROADSTER</option>
                            <option>SEDÁN</option>
                            <option>SUV</option>
                        </select>
                    </div>
                </div>
                
                <div class="flex flex-wrap -mx-3 mb-6">
                    
                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="fuelType">
                            Combustible
                        </label>
                        <select  x-model="fuelType" class="w-full h-12 border-zinc-300 focus:outline-none focus:ring-0 focus:border-orange-600 rounded text-sm text-zinc-700">
                            <option></option>
                            <option>DIESEL</option>
                            <option>GASOLINA</option>
                        </select>
                    </div>
                    
                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="capacity">
                            Capacidad Kg/Ps
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="capacity" type="number" placeholder="5">
                    </div>
                    
                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="EngineId">
                            Número de Motor
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="EngineId" type="text" placeholder="AB123CDE789">
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="SerieNum">
                            Número de Serie
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="SerieNum" type="text" placeholder="AB123CDE7XX">
                    </div>
                </div>
                
                <div class="flex flex-wrap -mx-3 mb-6">
                    

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="chasisNum">
                            Número de Chasís
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="chasisNum" type="text" placeholder="AB123CDE7XX">
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="fuelType">
                            País de Origen
                        </label>
                        <select  x-model="fuelType" class="w-full h-12 border-zinc-300 focus:outline-none focus:ring-0 focus:border-orange-600 rounded text-sm text-zinc-700">
                            <option></option>
                            <option>Alemania</option>
                            <option>Arabia Saudita</option>
                            <option>Argentina</option>
                            <option>Australia</option>
                            <option>Austria</option>
                            <option>Belgica</option>
                            <option>Bielorrusia</option>
                            <option>Brasil</option>
                            <option>Bulgaria</option>
                            <option>China</option>
                            <option>España</option>
                            <option>Estados Unidos</option>
                            <option>Francia</option>
                            <option>India</option>
                            <option>Irán</option>
                            <option>Italia</option>
                            <option>Japón</option>
                            <option>México</option>
                            <option>Portugal</option>
                            <option>Reino Unido</option>
                            <option>República Checa</option>
                            <option>Rumania</option>
                            <option>Suecia</option>
                            <option>Uruguay</option>
                        </select>
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="chasisNum">
                            Propietario
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="owner" type="text" placeholder="Manuel Lopez">
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="Id">
                            Identificación
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="Id" type="number" placeholder="12345678">
                    </div>
                </div>

                <div class="my-4 flex items-center justify-end space-x-4">
                    <button class="bg-orange-500 hover:bg-orange-600 rounded-lg px-8 py-2 text-zinc-100 hover:shadow-xl transition duration-150 uppercase">Registrar Vehículo</button>
                </div>
            </form>
        </div>
    </div>
</div>
