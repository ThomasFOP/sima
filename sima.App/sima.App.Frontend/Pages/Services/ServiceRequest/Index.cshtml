@page
@model ServiceRequestModel
@{
    ViewData["Title"] = "Solicitud de Servicio";
}


<div x-data="{ filter: false }" class="bg-white rounded-lg px-8 py-6 shadow-md overflow-x-scroll custom-scrollbar">
    <h4 class="text-xl font-poppins text-zinc-700 font-semibold">Solicitud de Servicio Automotriz</h4>
    <div class="mt-8 mb-3 flex flex-col md:flex-row items-start md:items-center md:justify-between">
        <div class="flex items-center justify-center space-x-4">
            <form class="w-full max-w-5xl">

                <label class="block uppercase tracking-wide text-orange-600 underline text-sm font-bold mb-8" for="middleName">
                        Datos Personales
                </label>
                <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="firstName">
                            Primer Nombre
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="firstName" type="text" placeholder="Juan">
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="middleName">
                            Segundo Nombre
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="middleName" type="text" placeholder="Manuel">
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="firstSurname">
                            Primer Apellido
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="firstSurname" type="text" placeholder="Gonzalez">
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="secondSurname">
                            Segundo Apellido
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="secondSurname" type="text" placeholder="Valencia">
                    </div>
                </div>

                <label class="block uppercase tracking-wide text-orange-600 text-sm underline font-bold mb-8" for="servicesRequest">
                    Servicio Solicitado
                </label>

                <div class="flex flex-wrap -mx-3 ">
                    <div class="w-full  sm:w-1/4 md:w-1/4 px-3 mb-6 md:mb-0">

                        <div class="">
                            <input id="default-checkbox" type="checkbox" value="" class="mr-2 focus:ring-0 rounded text-orange-600 checked">
                            <label for="default-checkbox" class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">Mecánica</label>
                        </div>
                        <div class="">
                            <input id="default-checkbox" type="checkbox" value="" class="mr-2 focus:ring-0 rounded text-orange-600 checked">
                            <label for="default-checkbox" class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">Latonería y Pintura</label>
                        </div>
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6">

                        <div class="pt-0">
                            <input id="default-checkbox" type="checkbox" value="" class="mr-2 focus:ring-0 rounded text-orange-600 checked">
                            <label for="default-checkbox" class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">Electricidad / Electrónica</label>
                        </div>
                        <div class="">
                            <input id="default-checkbox" type="checkbox" value="" class="mr-2 focus:ring-0 rounded text-orange-600 checked">
                            <label for="default-checkbox" class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">Escáner</label>
                        </div>
                    </div>

                    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">

                        <div class="pt-0">
                            <input id="default-checkbox" type="checkbox" value="" class="mr-2 focus:ring-0 rounded text-orange-600 checked">
                            <label for="default-checkbox" class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">Estética Automotriz</label>
                        </div>
                        <div class="">
                            <input id="default-checkbox" type="checkbox" value="" class="mr-2 focus:ring-0 rounded text-orange-600 checked">
                            <label for="default-checkbox" class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">Compra, Montaje y Alineación Llantas</label>
                        </div>
                    </div>                   
                </div>

                <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="date">
                            Fecha
                        </label>
                        <input class="appearance-none block w-full h-12 text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" type="date">
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="time">
                            Hora
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" type="time">
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="firstSurname">
                            Ciudad
                        </label>
                        <select  x-model="City" class="w-full h-12 border-zinc-300 focus:outline-none focus:ring-0 focus:border-orange-600 rounded text-sm text-zinc-700" x-model="City">
                            <option></option>
                            <option>Armenia</option>
                            <option>Barranquilla</option>
                            <option>Bogotá</option>
                            <option>Cali</option>
                            <option>Manizales</option>
                            <option>Medellín</option>
                            <option>Pasto</option>
                            <option>Pereira</option>
                        </select>
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="secondSurname">
                            Sucursal
                        </label>
                        <input class="appearance-none block w-full h-12 text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="secondSurname" type="text" placeholder="Centro">
                    </div>
                </div>

                <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full md:w-3/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="secondSurname">
                            Descripción de la solicitud
                        </label>
                        <textarea class="appearance-none block w-full h-20 text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="secondSurname" type="text" placeholder="Ejemplo: Vehículo presenta fallas en el encendido y las farolas delanteras están fundidas"></textarea>
                    </div>
                </div>

                <label class="block uppercase tracking-wide text-orange-600 underline text-sm font-bold mb-8" for="middleName">
                    Datos del Vehículo
                </label>

                <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="firstName">
                            Placa
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="firstName" type="text" placeholder="ABC-000A">
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="middleName">
                            Fabricante
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="middleName" type="text" placeholder="Mazda">
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="firstSurname">
                            Modelo
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="firstSurname" type="text" placeholder="2022">
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="secondSurname">
                            Color
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="secondSurname" type="text" placeholder="Rojo">
                    </div>
                </div>

                <label class="block uppercase tracking-wide text-orange-600 text-sm underline font-bold mb-8" for="firstName">
                    Medios de Contacto y/o Notificación
                </label>

                <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="firstName">
                            Teléfono
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="firstName" type="phone" placeholder="321-2222222  ">
                    </div>

                    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="middleName">
                            Correo Electrónico
                        </label>
                        <input class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150" id="middleName" type="email" placeholder="ejemplo@email.com">
                    </div>

                    <div for="servicesStatus_disabled" class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
                        <label class="block uppercase tracking-wide text-zinc-700 text-xs font-bold mb-4" for="middleName">
                            Estado de tu Solicitud
                        </label>
                        <select disabled id="servicesStatus_disabled" class="appearance-none block w-full text-zinc-700 border border-zinc-300 rounded py-3 px-4 mb-3 leading-tight focus:ring-0 focus:outline-none focus:border-orange-600 ease-in transition duration-150 cursor-not-allowed" >
                            <option selected >Pendiente Aprobación</option>
                            <option value="Aprobada"></option>
                            <option value="Rechazada"></option>
                            <option value="Reprogramada"></option>
                        </select>
                    </div>
                </div>
                <div class="my-4 flex items-center justify-end space-x-4">
                    <button class="bg-orange-500 hover:bg-orange-600 rounded-lg px-8 py-2 text-zinc-100 hover:shadow-xl transition duration-150 uppercase">Enviar Solicitud</button>
                </div>
            </form>
        </div>
    </div>
</div>
